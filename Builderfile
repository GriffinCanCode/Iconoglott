// Builderfile - Iconoglott Project Build Configuration

// Rust core library with PyO3 Python bindings
target("core-rust") {
    type: library;
    language: rust;
    sources: [
        "./source/core/src/lib.rs",
        "./source/core/src/scene.rs",
        "./source/core/src/render.rs",
        "./source/core/src/shape.rs",
        "./source/core/src/diff.rs"
    ];
    
    config: {
        "mode": "cargo",
        "profile": "release",
        "manifest": "./source/core/Cargo.toml"
    };
}

// Playground (built from npm package)
target("playground") {
    type: application;
    language: typescript;
    sources: ["./distribution/npm/playground/main.ts"];
    
    config: {
        "mode": "vite",
        "outdir": "./distribution/npm/playground/dist"
    };
}
